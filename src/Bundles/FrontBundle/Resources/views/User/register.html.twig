{% extends "FrontBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Inscription{% endblock %}
{% block body %}
	<div class="register-box">
	<div class="register-logo">
		<a href="/"><b>Yoo</b>tel</a>
	</div>
	<div class="register-box-body">
		{#<p class="login-box-msg">Bienvenue !</p>#}
		{% trans_default_domain 'FOSUserBundle' %}
		{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': ''}}) }}
			<div class="form-group has-feedback">
				{{ form_widget(form.email, { 'attr': {'class': 'form-control','placeholder': 'nom@exemple.com'} }) }}
				<span class="glyphicon glyphicon-envelope form-control-feedback">{{ form_errors(form.email) }}</span>
			</div>
			<div class="form-group has-feedback {% if form.plainPassword.first.vars.errors|length %}has-error{% endif %}">
				{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control','placeholder': 'Mot de passe'} }) }}
				<span class="glyphicon glyphicon-lock form-control-feedback">{{ form_errors(form.plainPassword.first) }}</span>
			</div>
			<div class="form-group has-feedback {% if form.plainPassword.second.vars.errors|length %}has-error{% endif %}">
				{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control','placeholder': 'Répéter le mot de passe'} }) }}
				<span class="glyphicon glyphicon-log-in form-control-feedback">{{ form_errors(form.plainPassword.second) }}</span>
			</div>
			<div class="row">
				<div class="col-xs-8">
					<div class="icheck {% if form.terms.vars.errors|length %}has-error{% endif %}">
						<label>
							{{ form_widget(form.terms) }}
							<span>J'accepte les <a href="#">conditions</a></span>
							<div class="help-block">{{ form_errors(form.terms) }}</div>
						</label>
					</div>
				</div>
				<!-- /.col -->
				<div class="col-xs-4">
					<button type="submit" class="btn btn-primary btn-block btn-flat">S'inscrire</button>
				</div>
				<!-- /.col -->
			</div>
		{{ form_end(form) }}
		<hr>
		<a href="/login" class="text-center btn btn-primary btn-block btn-flat">J'ai déjà un compte</a>
	</div>
{% endblock %}